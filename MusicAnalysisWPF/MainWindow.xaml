<Window x:Class="MusicAnalysisWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicAnalysisWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Output">
                <TextBlock Name="txt"  Grid.Row="0" TextWrapping="Wrap"/>
            </TabItem>
            <TabItem Header="List">
                <ListView Name="listView"/>
            </TabItem>
            <TabItem Header="Graph">

            </TabItem>
            <TabItem Header="DAG">

            </TabItem>
        </TabControl>
        <TextBlock Grid.Row="1" FontSize="24">
            (Here will be melody part represenation)
        </TextBlock >
        <Button Name="btnOpen" Click="btnOpen_Click" Grid.Row="2">
            Open File
        </Button>
    </Grid>
</Window>